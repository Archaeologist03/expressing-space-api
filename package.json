{
  "name": "expressing-space-api",
  "version": "1.0.0",
  "description": "node api for expressing space app",
  "main": "app.ts",
  "scripts": {
    "build": "tsc -p .",
    "build:live": "nodemon --watch '*.ts' --exec 'ts-node' src/app.ts",
    "tsc-buiild": "npm run build:live",
    "dev": "tsc --watch & nodemon dist",
    "test": "jest"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "verbose": true
  },
  "author": "Ilija",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "ts-node": "^8.5.4",
    "tslint": "^5.20.1",
    "typescript": "^3.7.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && pretty-quick --staged"
    }
  }
}
